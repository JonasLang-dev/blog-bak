---
import HeaderLink from './HeaderLink.astro'
import { HOMEPAGE_URL } from '../config'
import { IoLogoGithub } from 'react-icons/io5/index.js'
import CatIcon from './icons/cat'
import ThemeToggle from './ThemeToggleButton'
import DropdownMenu from './DropdownMenu'
---

<header class="fixed w-full p-2 z-20 backdrop-blur-md">
  <div class="mx-auto max-w-3xl">
    <nav class="flex items-center gap-3 text-base">
      <a href="/" class="group">
        <h2 class="font-semiold tracking-tighter p-2 font-notoSans text-lg">
          <CatIcon />
          Jonas Lang
        </h2>
      </a>
      <nav>
        <div class="items-center gap-6 hidden md:flex">
          <HeaderLink href="/blog">Blog</HeaderLink>
          <HeaderLink href={HOMEPAGE_URL}>About</HeaderLink>
          <HeaderLink href="https://github.com/withastro/astro" target="_blank"
            ><IoLogoGithub />GitHub</HeaderLink
          >
        </div>
      </nav>
      <div class="flex-1"></div>
      <ThemeToggle client:visible />
      <DropdownMenu client:visible />
    </nav>
  </div>
</header>
